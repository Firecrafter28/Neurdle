{
    "name": "Neurdle Development",
    "dockerFile": "./Dockerfile",
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "mounts": [
        "source=neurdle,target=/home/node/.vscode-server/neurdle,type=volume"
    ],
    "containerUser": "node",
    "remoteUser": "node",
    "updateRemoteUserUID": true,
    "runArgs": ["--name", "neurdle"],
    "customizations": {
        "vscode": {
            "extensions": [
                "EditorConfig.EditorConfig",
                "mrmlnc.vscode-scss",
                "github.vscode-github-actions",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "explorer.fileNesting.enabled": true,
                "explorer.fileNesting.patterns": {
                    "*.ts": "${capture}.js",
                    "*.js": "${capture}.js.map, ${capture}.d.ts, ${capture}.d.ts.map",
                    "package.json": "yarn.lock, .yarnrc.yaml",
                    "*.scss": "${capture}.css, ${capture}.css.map"
                },
                "explorer.fileNesting.expand": false,
                "[html][sass][typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                }
            }
        }
    },
    "forwardPorts": [3000],
    "postCreateCommand": "cd /workspace && yarn install"
}
